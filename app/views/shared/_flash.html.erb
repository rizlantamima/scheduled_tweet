<% if flash[:notice] || flash[:alert] %>
<div class="alert alert-dismissible <%= flash[:notice] ? "alert-info" : "alert-danger" %> " role="alert">
  <%= flash[:notice] ? flash[:notice] : flash[:alert] %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>