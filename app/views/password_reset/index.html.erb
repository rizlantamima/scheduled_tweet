<h1>Forgot Password</h1>

<%= form_with url: password_reset_path, data: { turbo:false }  do |form| %>
<div class="mb-3">
<%= form.label :email %>
<%= form.email_field :email, class: "form-control", placeholder: "email" %>
</div>

<div class="mb-3">
<%= form.submit "Reset password", class:"btn btn-primary" %>
</div>


<% end %>